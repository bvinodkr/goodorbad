<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlTreeNodeItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_ui" >

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/ivProfileImage"
            android:textSize="10sp"
            android:text="UserName" />

        <TextView
            android:id="@+id/tvRelativeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="8sp"
            android:layout_marginRight="6dp"
            android:text="5 m" />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rlHeader"
        android:paddingTop="4dp" >
        
         <TextView
            android:id="@+id/tvBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:paddingBottom="4dp"
            android:textSize="10sp"
            android:text="Sentence/Para in story" />

         <ImageView
             android:id="@+id/ivItemImage"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="5dp"
             android:paddingBottom="5dp"
             android:layout_below="@+id/tvBody"
             android:layout_centerVertical="true"
             android:layout_marginLeft="24dp"
             android:src="@drawable/ic_launcher" />
        
    </RelativeLayout>    
    
    <LinearLayout
        android:id="@+id/llFollowers"
        android:layout_width="wrap_content"
        android:layout_height="20dp"  
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/rlBody"
        android:orientation="horizontal"
        android:background="#CCCCCC" >


        <ImageView
            android:id="@+id/ivEmptyHeart"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_action_empty_heart" />

        <TextView
            android:id="@+id/tvLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"            
            android:text=""
            android:textSize="8sp" />
        
        <TextView
            android:id="@+id/tvVersions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="bottom"
            android:textSize="8sp"
            android:text="5 Endings" />

    </LinearLayout>

</RelativeLayout>