<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlStoryLineItem"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/rlHeader"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:contentDescription="@string/image_desc"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/ivProfileImage"
            android:textSize="12sp"
            android:text="UserName" />

        <TextView
            android:id="@+id/tvRelativeTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:textSize="12sp"
            android:layout_marginRight="6dp"
            android:text="5 m" />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rlHeader"
        android:paddingTop="4dp" >
        
         <TextView
            android:id="@+id/tvBody"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:paddingBottom="4dp"
            android:textSize="14sp"
            android:text="Sentence/Para in story" />

         <com.loopj.android.image.SmartImageView xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/ivItemImage"
             android:layout_marginTop="5dp"
             android:paddingBottom="5dp"
             android:layout_below="@+id/tvBody"
             android:layout_centerVertical="true"
             android:layout_marginLeft="24dp"
             android:layout_width="100dp"
    		android:layout_height="100dp"
             android:src="@drawable/ic_launcher" />
         
         <VideoView
             android:id="@+id/vvItemVideo"
             android:layout_width="250dp"
             android:layout_height="200dp"
             android:layout_marginTop="5dp"
             android:layout_marginBottom="10dp"
             android:layout_below="@+id/tvBody"
             android:layout_toRightOf="@+id/ivItemImage"
             android:layout_centerVertical="true"
             android:layout_marginLeft="24dp" />
        
    </RelativeLayout>    
    
    <LinearLayout
        android:id="@+id/llFollowers"
        android:layout_width="wrap_content"
        android:layout_height="25dp"  
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/rlBody"
        android:orientation="horizontal" >


        <ImageView
            android:id="@+id/ivEmptyHeart"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_action_empty_heart" />

        <TextView
            android:id="@+id/tvLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"            
            android:text="5"
            android:textSize="12sp" />
        
        <TextView
            android:id="@+id/tvVersions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="bottom"
            android:textSize="12sp"
            android:text="5 Endings" />
        
        <TextView
            android:id="@+id/tvForks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginBottom="2dp"
            android:layout_gravity="bottom"
            android:textSize="12sp"
            android:text="5 Forks" />

        <ImageView
            android:id="@+id/ivForkStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_gravity="bottom"           
            android:src="@drawable/ic_action_popup" />

    </LinearLayout>

</RelativeLayout>